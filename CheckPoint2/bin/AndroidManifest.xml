<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hooper.checkpoint2"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.hooper.checkpoint2.MainActivity"
            android:label="@string/app_name" 
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
         <activity
            android:name="com.hooper.checkpoint2.PlayActivity"
            android:label="@string/app_name" 
           >
            <intent-filter>
                <action android:name="com.hooper.checkpoint2.PlayActivity" />
				<category android:name="android.intent.category.DEFAULT" />
               
            </intent-filter>
        </activity>
         <activity
            android:name="com.hooper.checkpoint2.AboutActivity"
            android:label="@string/app_name" 
           >
            <intent-filter>
                <action android:name="com.hooper.checkpoint2.AboutActivity" />
				<category android:name="android.intent.category.DEFAULT" />
               
            </intent-filter>
        </activity>
         <activity
            android:name="com.hooper.checkpoint2.ScoresActivity"
            android:label="@string/app_name" 
           >
            <intent-filter>
                <action android:name="com.hooper.checkpoint2.ScoresActivity" />
				<category android:name="android.intent.category.DEFAULT" />
               
            </intent-filter>
        </activity>
         <activity
            android:name="com.hooper.checkpoint2.SettingsActivity"
            android:label="@string/app_name" 
           >
            <intent-filter>
                <action android:name="com.hooper.checkpoint2.SettingsActivity" />
				<category android:name="android.intent.category.DEFAULT" />
               
            </intent-filter>
        </activity>
         <activity
            android:name="com.hooper.checkpoint2.ExitActivity"
            android:label="@string/app_name" 
           >
            <intent-filter>
                <action android:name="com.hooper.checkpoint2.ExitActivity" />
				<category android:name="android.intent.category.DEFAULT" />
               
            </intent-filter>
        </activity>
        
    </application>

</manifest>
